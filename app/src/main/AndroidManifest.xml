<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sample.carpool.delvelogic.poolmyridesample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LatestCarpoolActivity"
            android:label="@string/title_activity_carpool"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.LocationCarpoolActivity"
            android:label="@string/title_activity_location_carpool"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.RouteCarpoolActivity"
            android:label="@string/title_activity_route_carpool"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.RealTimeUserCarpoolActivity"
            android:label="@string/title_activity_filter_carpool"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
